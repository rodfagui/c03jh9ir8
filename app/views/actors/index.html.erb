<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Actores</h1>

      <table class="table">
        <tr>
          <th>Foto</th>
          <th>Nombre</th>
          <th>Bio</th>
          <th>Fecha de nacimiento</th>
          <th>Lugar de nacimiento</th>
          <th>Fecha de fallecimiento</th>
          <th>Lugar de fallecimiento</th>
        </tr>
        <% @actors.each do |actor| %>
          <tr>
            <td><%= image_tag actor.image_url %></td>
            <td><%= actor.name %></td>
            <td><%= actor.bio %></td>
            <td><%= actor.birth_date %></td>
            <td><%= actor.birth_place %></td>
            <% if actor.death_date.nil? %>
              <td>NA</td>
              <td>NA</td>
            <% else %>
              <td><%= actor.death_date %></td>
              <td><%= actor.death_place %></td>
            <% end %>          
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>